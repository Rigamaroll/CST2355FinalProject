<?xml version="1.0" encoding="utf-8"?>


<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navDrawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewAllImage"
    tools:openDrawer="start">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="5dp"
    android:background="@color/black"
    android:orientation="vertical">

    <include
        layout="@layout/activity_main_toolbar"
       />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/black">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/black">
            <Spinner
                android:id="@+id/sortField"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="2dp"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"/>
            <Spinner
                android:id="@+id/sortDirection"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="2dp"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"/>
            <Button
                android:id="@+id/resetFilterButton"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:backgroundTint="@color/light_grey"
                android:text="@string/resetFilterButton"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/black">
            <EditText
                android:id="@+id/keywordFilter"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="66"
                android:hint="@string/keywordFilter"
                android:inputType="text"
                android:imeOptions="actionDone"
                android:paddingHorizontal="2dp"
                android:layout_margin="@dimen/cardview_default_elevation"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:background="@color/white"/>
            <Spinner
                android:id="@+id/filterField"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="33"
                android:layout_marginTop="2dp"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"/>
        </LinearLayout>
    </LinearLayout>
        <ListView
            android:id="@+id/imageList"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <include
        layout="@layout/nav_view_layout"/>
</androidx.drawerlayout.widget.DrawerLayout>